#pragma once

#include <algorithm>
#include "grid_types.h"
#include "Tile.h"

class TileData
{
	int _xPos;
	int _yPos;
	int _zPos;
	Tile *_tile;

	TileData(int xPos, int yPos, int zPos)
	{
		_xPos = xPos;
		_yPos = yPos;
		_zPos = zPos;
		_tile = NULL;
	}
};

class Grid
{
public:
	Grid();
	virtual ~Grid();

	static std::vector<TileData> _tileGrid;
	static void setTileData(int xPos, int yPos, int zPos);

    static int _playableGrid[GRID_X][GRID_Y][GRID_Z];
};
