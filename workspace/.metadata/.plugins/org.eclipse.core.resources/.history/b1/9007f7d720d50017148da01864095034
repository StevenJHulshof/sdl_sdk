#pragma once

#include "container_types.h"
#include "Generator.h"

enum
{
	TYPE_EMPTY,
	TYPE_TILE_GRASS,
	TYPE_TILE_SAND,
	TYPE_TILE_WATER,
	TYPE_UNIT_WARRIOR,
	TYPE_RESOURCE_RAW_WOOD,
	TYPE_RESOURCE_RAW_STONE,
};

class Container {
public:
	Container();
	virtual ~Container();

    int _tileGrid[GRID_X][GRID_Y];
    int _playableGrid[GRID_X][GRID_Y];
    Generator generator;

	virtual void update();
	virtual void render();
};
