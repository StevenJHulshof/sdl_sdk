#include "Map.h"

Map::Map()
{
	for(int x = -GRID_N; x < GRID_N; x++)
	{
		for(int y = std::max(-GRID_N, -x - GRID_N); y < std::min(GRID_N, -x + GRID_N); y++)
		{
			_tileMap.push_back(TileData(x, y, -x - y));
		}
	}
}

Map::~Map()
{

}

void Map::render()
{
	for(size_t i = 0; i < _tileMap.size(); i++)
	{
		_tileMap[i].render();
	}
}
