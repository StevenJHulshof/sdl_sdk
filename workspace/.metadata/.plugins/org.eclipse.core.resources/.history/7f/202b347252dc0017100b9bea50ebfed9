#include "Grid.h"

std::vector<TileData> Grid::_tileGrid(0);

Grid::Grid()
{
	for(int x = -GRID_N; x <= GRID_N; x++)
	{
		for(int y = std::max(-GRID_N, -x - GRID_N); y <= std::min(GRID_N, -x + GRID_N); y++)
		{
			int z = -x - y;
			_tileGrid.push_back(TileData(x, y, z));
		}
	}
}

Grid::~Grid()
{

}
