#include "Tile.h"

Tile::Tile(Container *pContainer, int xPos, int yPos, int type):
	GameObject()
{
	_pContainer = pContainer;
	_xPos = xPos;
	_yPos = yPos;
	_type = type;
	setTextureType();
}

Tile::~Tile()
{

}

void Tile::renderGraphics()
{
	GameObject::renderGraphics();

	if(_type == TYPE_TILE_WATER || _type == TYPE_TILE_SAND)
	{
		int overlay = Overlay::getTileOverlay(_pContainer->_tileGrid, _xPos, _yPos, _type);
		if(overlay < 63)
		{
			gTextures[TEXTURE_TILE_OVERLAY_0000 + overlay].render(_screenPosX, _screenPosY, NULL 0, NULL, _flip, _zoom);
		}
	}
}

void Tile::setTextureType()
{
	switch(_type)
	{
	case TYPE_TILE_GRASS:
		_textureType = TEXTURE_TILE_GRASS_0000;
		break;

	case TYPE_TILE_SAND:
		_textureType = TEXTURE_TILE_SAND_0000;
		break;

	case TYPE_TILE_WATER:
		_textureType = TEXTURE_TILE_WATER_0000;
		break;

	default:
		break;
	}
}
