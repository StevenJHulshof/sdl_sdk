#include "Overlay.h"

Overlay::Overlay()
{
}

Overlay::~Overlay()
{
}

int Overlay::getTileOverlay(int tileGrid[GRID_X][GRID_Y], int xPos, int yPos, int type)
{
    int overlay = 0;
    
    if(yPos > 0)
    {
        if(tileGrid[xPos][yPos - 1] == type)
        {
            overlay |= 0x01;
        }
    }
    else
    {
        overlay |= 0x01;
    }
    if(yPos < GRID_Y - 1)
    {
        if(tileGrid[xPos][yPos + 1] == type)
        {
            overlay |= 0x08;
        }
    }
    if(xPos % 2 == 0)
    {
        if(xPos < GRID_X - 1)
        {
            if(tileGrid[xPos + 1][yPos] == type) 
            {
                overlay |= 0x02;  
            }
        }
        if(xPos < GRID_X - 1 && yPos < GRID_Y - 1)
        {     
            if(tileGrid[xPos + 1][yPos + 1] == type)
            {
                overlay |= 0x04;
            }
        }

        if(xPos > 0 && yPos < GRID_Y - 1)
        {
            if(tileGrid[xPos - 1][yPos + 1] == type)
            {
                overlay |= 0x10;
            }
        }
        if(xPos > 0)
        {
            if(tileGrid[xPos - 1][yPos] == type)
            {
                overlay |= 0x20;        
            }
        }
    }
    else
    {
        if(xPos < GRID_X - 1 && yPos > 0)
        {
            if(tileGrid[xPos + 1][yPos - 1] == type) 
            {
                overlay |= 0x02;  
            }
        }
        if(xPos < GRID_X - 1)
        {     
            if(tileGrid[xPos + 1][yPos] == type)
            {
                overlay |= 0x04;
            }
        }

        if(xPos > 0)
        {
            if(tileGrid[xPos - 1][yPos] == type)
            {
                overlay |= 0x10;
            }
        }
        if(xPos > 0 && yPos > 0)
        {
            if(tileGrid[xPos - 1][yPos - 1] == type)
            {
                overlay |= 0x20;        
            }
        }
    }
    
    return overlay;
}
