#include "GameObject.h"

GameObject::GameObject():
	_selected(false),
	_hovered(false),
	_hasActionMenu(false),
	_textureType(0),
	_screenPosX(0),
	_screenPosY(0),
	_offsetX(0),
	_offsetY(0),
	_priority(0),
	_basePriority(0),
	_velocity(0),
	_xPos(0),
	_yPos(0),
	_flip(SDL_FLIP_NONE),
	_zoom(1.0)
{
	setTextureType();
}

GameObject::~GameObject()
{

}

void GameObject::update()
{
	updateInput();
	updatePhysics();
	updateGraphics();
}

void GameObject::render()
{
	renderGraphics();
}

