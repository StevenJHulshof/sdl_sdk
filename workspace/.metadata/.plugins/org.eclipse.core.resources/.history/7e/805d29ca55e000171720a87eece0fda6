#pragma once

#include "container_types.h"
#include "GameObject.h"
#include "Overlay.h"

class Tile: public GameObject
{
protected:
	virtual void setTextureType();

public:
	Tile(int type);
	virtual ~Tile();

	virtual void render(int xPos, int yPos);

	virtual void renderGraphics(int xPos, int yPos);
};

class TileData
{
private:
	int _xPos, _yPos, _zPos;
	Tile *_tile;
public:
	TileData(int xPos, int yPos, int zPos)
	{
		_xPos = xPos;
		_yPos = yPos;
		_xPos = zPos;
		_tile = NULL;
	}

	void render()
	{
		if(_tile != NULL)
		{
			_tile->render(x, y);
		}
	}
};
