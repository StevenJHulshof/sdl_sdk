#include "Grid.h"

int Grid::_tileGrid[GRID_X][GRID_Y][GRID_Z] = {0};
int Grid::_playableGrid[GRID_X][GRID_Y][GRID_Z] = {0};

Grid::Grid()
{
	for(int x = -GRID_N; x <= GRID_N; x++)
	{
		for(int y = std::max(-GRID_N, -x - GRID_N); y <= std::min(GRID_N, -x + GRID_N); y++)
		{
			int z = -x - y;

		}
	}
}

Grid::~Grid()
{

}
